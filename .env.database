# 数据库存储配置
ENABLE_DATABASE_STORAGE=true

# PostgreSQL配置 - 主数据库
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=trading_db
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5

# ClickHouse配置 - 时序数据
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=market_data
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

# Redis配置 - 缓存
REDIS_URL=redis://localhost:6379
REDIS_DATABASE=0
REDIS_MAX_CONNECTIONS=10
REDIS_MIN_CONNECTIONS=2

# Kafka配置 - 消息队列
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=market_data

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=86400

# 加密配置
ENCRYPTION_KEY=your-32-char-encryption-key-here
BCRYPT_ROUNDS=12

# 服务配置 - 专业版标准端口 (2024-12-21 正式确定)
MARKET_DATA_HOST=localhost
MARKET_DATA_PORT=8081
TRADING_ENGINE_HOST=localhost
TRADING_ENGINE_PORT=8082
STRATEGY_ENGINE_HOST=localhost
STRATEGY_ENGINE_PORT=8083
USER_MANAGEMENT_HOST=localhost
USER_MANAGEMENT_PORT=8084
RISK_MANAGEMENT_HOST=localhost
RISK_MANAGEMENT_PORT=8085
NOTIFICATION_HOST=localhost
NOTIFICATION_PORT=8086
ANALYTICS_HOST=localhost
ANALYTICS_PORT=8087
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=8088
GATEWAY_HOST=localhost
GATEWAY_PORT=8091

# 存储配置
BATCH_SIZE=1000
FLUSH_INTERVAL_SECONDS=60

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 开发环境标识
ENVIRONMENT=development
DEBUG=true