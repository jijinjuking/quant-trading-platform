# AI模型API配置文件
# 请根据你的实际API密钥填写以下配置

# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# OpenAI API配置 (GPT-4)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic API配置 (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# Google AI API配置 (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_BASE_URL=https://generativelanguage.googleapis.com/v1

# AI模型配置
DEFAULT_AI_MODEL=DeepSeek V2
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3
AI_CACHE_TTL=300

# 模型特定配置
DEEPSEEK_MODEL_NAME=deepseek-chat
OPENAI_MODEL_NAME=gpt-4-turbo-preview
ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229
GOOGLE_MODEL_NAME=gemini-pro

# 价格预测配置
PRICE_PREDICTION_CONFIDENCE_THRESHOLD=0.7
PRICE_PREDICTION_MAX_HORIZON=1440  # 24小时 (分钟)

# 风险管理配置
MAX_POSITION_SIZE_PERCENT=10.0
DEFAULT_STOP_LOSS_PERCENT=2.0
DEFAULT_TAKE_PROFIT_PERCENT=5.0

# 调试配置
AI_DEBUG_MODE=true
AI_LOG_REQUESTS=true
AI_MOCK_MODE=false  # 设置为true使用模拟数据，false使用真实API